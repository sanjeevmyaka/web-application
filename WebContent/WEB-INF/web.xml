<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>WebApplictaion</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>loginPage</servlet-name>
		<servlet-class>com.sanjeev.web.LoginPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>loginPage</servlet-name>
		<url-pattern>/loginPage</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.sanjeev.web.Login</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Product package -->
	<!-- HomeServlet -->
	<servlet>
		<servlet-name>home</servlet-name>
		<servlet-class>com.sanjeev.product.HomeServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>home</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>

	<!-- ProductServlet package -->
	<servlet>
		<servlet-name>productDisplay</servlet-name>
		<servlet-class>com.sanjeev.product.ProductServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>productDisplay</servlet-name>
		<url-pattern>/productDisplay</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>product</servlet-name>
		<servlet-class>com.sanjeev.product.ProductSaveServalet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>product</servlet-name>
		<url-pattern>/product</url-pattern>
	</servlet-mapping>

	<!-- Student Package -->
	<servlet>
		<servlet-name>student</servlet-name>
		<servlet-class>com.sanjeev.student.StudentServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>student</servlet-name>
		<url-pattern>/student</url-pattern>
	</servlet-mapping>

	<!-- Student-Search Package -->
	<servlet>
		<servlet-name>student-search</servlet-name>
		<servlet-class>com.sanjeev.stdsearch.StudentSearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>student-search</servlet-name>
		<url-pattern>/studentSearch</url-pattern>
	</servlet-mapping>

</web-app>